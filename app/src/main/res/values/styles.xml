<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Custom style for the Toolbar title -->
    <style name="ToolbarTitleStyle">
        <item name="android:textColor">#FFFFFF</item> <!-- White text color -->
        <item name="android:textSize">35sp</item> <!-- Font size -->
    </style>

    <!-- Custom style for the Toolbar subtitle -->
    <style name="ToolbarSubtitleStyle">
        <item name="android:textColor">#B0B0B0</item> <!-- Gray text color -->
        <item name="android:textSize">14sp</item> <!-- Font size -->
    </style>

    <style name="Theme.RetrofitYoutube" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Space_Cadet</item>
        <item name="colorPrimaryVariant">@color/Indigo</item>
        <item name="colorOnPrimary">@color/Sandy_Tan</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
</resources>
